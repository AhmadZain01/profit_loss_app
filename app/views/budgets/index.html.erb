<%= link_to 'New', new_budget_path %>
<h1 align ="center"> All  Budget</h1>
<p>
  <%= link_to "Create new budget", new_budget_path %>
</p>

<table class="table">
  <thead>
    <tr>
      <th scope="col">Income</th>
      <th scope="col">Expense</th>
      <th scope="col">Edit</th>
      <th scope="col">Delete</th>
    </tr>
  </thead>
  <tbody>
    <% @budgets.each do |budget| %>
    <tr>
      <td><%= budget.income %></td>
      <td><%= budget.expense %> </td>
      <td> <%= link_to "Edit  budget", edit_budget_path(budget) %></td>
      <td><%= link_to 'Delete', budget_path(budget), method: :delete, data: {confirm: "Are you sure?"} %></td>
    </tr>
    <% end %>
    <hr>
    <td><%= Budget.sum(:income) %> </td>
    <td> <%= Budget.sum(:expense) %> </td>
    <td></td>
  </tbody>
</table>
