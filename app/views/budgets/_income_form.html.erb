<div class='row'>
  <div class='col-xs-12'>
    <%= form_for(@budget, :html => {class: "form-horizontal", role:"form"})do |f| %>
    <div class="form-group">
      <div class="control-label col-sm-8">
        <%= f.text_field :income , class:"form-control", placeholder: "Income", autofocus: true %>
      </div>
    </div>
    <div class="form-group">
      <div class="control-label col-sm-8">
        <%= f.text_field :expense , class:"form-control", placeholder: "Title of the Article", autofocus: true %>
      </div>
    </div>
    <div class="form-group">
      <div class="control-label col-sm-8">
        <%= f.text_area :description ,class:"form-control", placeholder: "Message of the icome", autofocus: true %><br />
      </div>
    </div>
    <div class="form-group">
      <div class=" col-sm-offset-2 col-sm-2">
        <%= f.submit class:"btn btn-primary btn-lg" %>

      </div>
    </div>
    <% end %>
  </div>

</div>
