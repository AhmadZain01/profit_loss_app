<div class='row'>
  <div class='col-xs-12'>
    <%= form_for(@income, html: { class: "form-horizontal" }) do |f| %>
    <div class="form-group">
      <div class="control-label col-sm-8">
        <%= f.text_field :amount, class: "form-control", placeholder: "Expense", autofocus: true %>
      </div>
    </div>
    <div class="form-group">
      <div class="control-label col-sm-8">
        <%= f.text_area :description, class: "form-control", placeholder: "Message of the Expense", autofocus: true %><br />
      </div>
    </div>
    <div class="form-group">
      <div class=" col-sm-offset-2 col-sm-2">
        <%= f.submit class: "btn btn-warning btn-lg" %>
      </div>
    </div>
 <% end %>
  </div>
</div>
