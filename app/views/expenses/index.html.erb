<%= link_to 'New', new_expense_path %>
<h1 align="center"> All Expense</h1>
<p>
  <%= link_to "Create new budget", new_expense_path %>
</p>
<table class="table">
  <thead>
    <tr>
      <th scope="col">Expense</th>
      <th scope="col">Edit</th>
      <th scope="col">Delete</th>
    </tr>
  </thead>
  <tbody>
    <% @expenses.each do |expense| %>
    <tr>
      <td><%= expense.amount %> </td>
      <td> <%= link_to "Edit Expense", edit_expense_path(expense) %></td>
      <td><%= link_to 'Delete', expense_path(expense), method: :delete, data: {confirm: "Are you sure?"} %></td>
    </tr>
    <% end %>
    <hr>
    <td><%= current_user.total_expense %></td>
  </tbody>
</table>